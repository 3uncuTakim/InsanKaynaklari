@model EmployeeProfileVM
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/settings.css" rel="stylesheet" />

<div class="container">
    <div class="main-body">
        <div class="row gutters-sm">
            <div class="col-md-4 col-sm-12 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="~/images/@Model.Picture" class="rounded-circle" width="150">
                            <div class="mt-3">
                                <h4>@(Model.FirstName +" "+ Model.LastName)</h4>
                                <p class="text-secondary mb-1">@Model.Title</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8 col-sm-12">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Adı</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @(Model.FirstName +" "+ Model.LastName)
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Email
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Doğum Günü</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Birthday.ToString("dd MMMM YYYY")
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Adres</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Address
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Ünvan</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Title
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Departman</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Department
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Çalışma şekli</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.WorkStyle
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">İşe başlama Zamanı</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.StartDate
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-12">
                                <a class="btn btn-info " href="~/Settings/ChangePassword/@Context.Session.GetString("userId")">Şifre değiştir</a>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>

    </div>
</div>


@model LeaveCreateVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-controller="Leaves" asp-action="Create" enctype="multipart/form-data" asp-route-yonlen="@ViewBag.yonlen">
    <div class="row">
        <div class="col-sm-5">
            <div class="form-group">
                <label asp-for="StartLeaveDate" class="control-label"></label>
                <input type="date" asp-for="StartLeaveDate" class="form-control" />
                <span asp-validation-for="StartLeaveDate" class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-5">
            <div class="form-group">
                <label asp-for="EndLeaveDate" class="control-label"></label>
                <input type="date" asp-for="EndLeaveDate" class="form-control" />
                <span asp-validation-for="EndLeaveDate" class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-5">
            <div class="form-group">
                <label asp-for="LeaveTypeID" class="control-label"></label>
                <select asp-for="LeaveTypeID" class="form-control" asp-items="ViewBag.LeaveTypeID"></select>
                <span asp-validation-for="LeaveTypeID" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-8">
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" style="width:100%; height:150px;"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label asp-for="LeaveDocument" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="LeaveDocument" class="custom-file-input" id="customFile" />
                    <label class="custom-file-label" for="customFile">Choose File</label>
                </div>
                <span asp-validation-for="LeaveDocument" class="text-danger"></span>
            </div>
            <div class="form-group float-right mt-4">
                <input type="submit" value="İzin Ekle" class="btn btn-info" />
                <a href="~/Leaves/Index/@Context.Session.GetString("userId")" class="btn btn-primary"><i class="fas fa-fast-backward"> Geri Dön</i></a>
            </div>
        </div>
    </div>
</form>

@section scripts{
    <script type="text/javascript">
        $("custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
}

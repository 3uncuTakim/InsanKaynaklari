@model List<LeaveMainPageVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

 }
<link href="~/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<div class="container-fluid">

    @if (TempData["message"] != null)
    {
        <div class="text-success">@TempData["message"]</div>
    }
    @if (TempData["error"] != null)
    {
        <div class="text-danger">@TempData["error"]</div>
    }

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">izinleriniz</h6>
            <a class="btn btn-info " href="~/Leaves/Create/@Context.Session.GetString("userId")">İzin</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>İzin Türü</th>
                            <th>Başlangıç Tarihi</th>
                            <th>Bitiş Tarihi</th>
                            <th>Gün Sayısı</th>
                            <th>Onay Durumu</th>
                            <th> ---------  </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.LeaveTypeName</th>
                                <th>@item.StartLeaveDate.ToString("dd/MMMM")</th>
                                <th>@item.EndLeaveDate.ToString("dd/MMMM")</th>
                                <th>@item.TotalDaysOff</th>
                                <th>@item.ConfirmStatus</th>
                                @if (item.StartLeaveDate >= DateTime.Today.AddDays(7))
                                {
                                    <th><a asp-action="Edit" asp-route-id="@item.ID">Düzenle</a> </th>
                                }
                                else
                                {
                                    <th>--</th>
                                }

                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
@model LeaveDetailsVM
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid p-2">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header d-flex justify-content-around">
                    <h3>İzin Detayları</h3>
                    <button type="button" class="btn btn-info" data-toggle="modal" data-target="#exampleModal">İzin Belgesi</button>
                </div>
                <div class="card-body text-center">                    
                    <div class="row">
                        <div class="col-lg-3 col-sm-12">
                            <h6 class="mb-0">İzin Türü</h6>
                        </div>
                        <div class="col-lg-9 col-sm-12 text-secondary">
                            @Model.LeaveTypeName
                        </div>
                        
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-lg-3 col-sm-12">
                            <h6 class="mb-0">İzin Başlangıç Tarihi</h6>
                        </div>
                        <div class="col-lg-9 col-sm-12 text-secondary ">
                            @Model.StartLeaveDate.ToString("dd/MMMM/yy")
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-lg-3 col-sm-12">
                            <h6 class="mb-0">İzin Bitiş Tarihi</h6>
                        </div>
                        <div class="col-lg-9 col-sm-12 text-secondary ">
                            @Model.EndLeaveDate.ToString("dd/MMMM/yy")
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-lg-3 col-sm-12">
                            <h6 class="mb-0">Gün Sayısı</h6>
                        </div>
                        <div class="col-lg-9 col-sm-12 text-secondary">
                            @Model.TotalDaysOff
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-lg-3 col-sm-12">
                            <h6 class="mb-0">Onay Durumu</h6>
                        </div>
                        <div class="col-lg-9 col-sm-12 text-secondary">
                            @Model.ConfirmStatus
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-lg-12 ">
                            <h6 class="mb-0">Açıklama</h6>

                        </div>
                        <div class="col-lg-12  text-secondary">
                            <p>@Model.Description</p>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">İzin Belgesi</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @if (Model.LeaveDocument is not null)
                {
                    <img class="img-fluid" src="/images/@Model.LeaveDocument" />
                }
                else
                {
                    <h4>İzin Belgesi Eklenmemiştir.</h4>
                }

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>           
            </div>
        </div>
    </div>
</div>
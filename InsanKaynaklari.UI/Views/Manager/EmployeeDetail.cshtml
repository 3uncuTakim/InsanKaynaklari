@model EmployeeDetailVM
@{
    ViewData["Title"] = "EmployeeDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="main-body">
        <div class="row gutters-sm">
            <div class="col-md-4 col-sm-12 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="~/images/@Model.Picture" class="rounded-circle" width="150">
                            <div class="mt-3">
                                <h4>@(Model.FirstName +" "+ Model.LastName)</h4>
                                <p class="text-secondary mb-1">@Model.Title</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8 col-sm-12">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Adı</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @(Model.FirstName +" "+ Model.LastName)
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Email
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Doğum Günü</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Birthday.ToString("dd MMMM yyyy")
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Adres</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Address
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Ünvan</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Title
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Departman</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Department
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Çalışma şekli</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.WorkStyle
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">İşe başlama Zamanı</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.StartDate
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-6">
                                <a class="btn btn-info " href="~/Manager/EmployeeEdit/@Model.ID">Düzenle</a>
                            </div>
                            <div class="col-sm-6">
                                @if (Model.Activation == true)
                                {
                                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal@(Model.ID)">Pasifleştir</button>
                                    <div class="modal fade" id="exampleModal@(Model.ID)" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLabel">Onaylama İşlemi</h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    <p>@Model.FirstName @Model.LastName adlı çalışanın hesabını pasifize etmek istediğinize emin misiniz?</p>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                                                    <a class="btn btn-danger" asp-action="DeactiveEmployee" asp-route-id="@Model.ID">Onayla</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>


                                }
                                else
                                {
                                    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#exampleModal@(Model.ID)">Aktifleştir</button>
                                    <div class="modal fade" id="exampleModal@(Model.ID)" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLabel">Onaylama İşlemi</h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    <p>@Model.FirstName @Model.LastName adlı çalışanın hesabını aktifleştirek istediğinize emin misiniz?</p>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                                                    <a class="btn btn-danger" asp-action="ActiveEmployee" asp-route-id="@Model.ID">Onayla</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }

                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>

    </div>
</div>




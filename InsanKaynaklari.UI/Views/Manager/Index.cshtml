@model ManagerMainPageVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<div class="container-fluid mt-2">
    <div class="row">
        <div class="col-md-6 col-sm-12">
            <div class="card">
                <h2 class="card-header">Toplam Çalışan Sayısı</h2>
                <div class="card-body">
                    <div class="text-center">@Model.EmployeeCount</div>
                    <div class="d-flex justify-content-between">
                        <a class="btn btn-info" href="~/Manager/EmployeeList/@Context.Session.GetString("userId")">Çalışan Listesi</a>
                        <a class="btn btn-info" href="~/Manager/CreateEmployee/@Context.Session.GetString("userId")">Çalışan Ekle</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-sm-12">
            <div class="card">
                <h2 class="card-header">Doğum Günleri</h2>
                <div class="card-body">
                    @foreach (var item in Model.BirthDays)
                    {
                        <ul class="list-group">
                            <li class="list-group-item">@item.Birthday.ToString("dd MMMM") -- @(item.Firstname +" "+ item.Lastname)</li>
                        </ul>
                    }
                </div>
            </div>
        </div>

    </div>
</div>


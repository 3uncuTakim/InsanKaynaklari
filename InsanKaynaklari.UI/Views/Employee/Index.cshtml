@model EmployeeMainPageVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>
    Welcome @Context.Session.GetString("username")
</h2>
<div class="container-fluid">
    <div class="row">
        <div class="col-xl-4 col-xs-12">
            <div class="card">
                <img class="card-img-top" src="https://unsplash.it/100/100" />
                <div class="card-body">
                    <h2 class="card-header">İzin başlığı</h2>

                </div>
            </div>

        </div>
        <div class="col-xl-4 col-xs-12">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-header">Doğum günleri</h2>
                    @foreach (var item in Model.PersonelDetails)
                    {
                        <ul>
                            <li>@item.Birthday -- @(item.FirstName+" "+item.LastName)</li>
                        </ul>
                    }
                </div>
            </div>

        </div>
        <div class="col-xl-4 col-xs-12">
            <div class="card">
                <h2 class="card-header">Resmi Tatiller</h2>
                <div class="card-body">
                    @foreach (var item in Model.PublicHoliday)
                    {
                        <ul>
                            <li>@item.gun <br /> @item.uzuntarih </li>
                        </ul>
                    }

                </div>
            </div>

        </div>
    </div>
</div>

